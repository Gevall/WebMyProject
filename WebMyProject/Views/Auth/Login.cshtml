@model WebMyProject.UserAuth.UserLogin
@{
    ViewData["Title"] = "Login";
}
<head>
    <link href='@Url.Content("~/Content/bootstrap.min.css")' rel="stylesheet" type="text/css" />
    <script src='@Url.Content("~/Scripts/bootstrap.min.js")'></script>
</head>
<body>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 well">
            <h3 class="text-center">Вход</h3>

                <form method="post" asp-controller="Auth" asp-action="Login" asp-antiforgery="true" style="padding-left:20px; padding-top:20px;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="returnUrl" />

                <div class="col-xs-12">
                    <div class="form-group">
                        <input type="text" asp-for="email" class="form-control" placeholder="Логин" />
                    </div>
                </div>

                <div class="col-xs-12">
                    <div class="form-group">
                        <input type="password" asp-for="password" class="form-control" placeholder="Пароль" />
                    </div>
                </div>
                <div class="text-center col-xs-12">
                    <button type="submit" class="btn btn-default">Войти</button>
                </div>
            </form>

            <p>
                <div>
                    Нет аккаунта? <a href="/Account/Register">Регистрация</a>
                </div>
            </p>

        </div>
    </div>
</div>
</body>

