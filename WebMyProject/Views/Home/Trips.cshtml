@using WebMyProject.Model;
@model List<Trips>;
@{
    Layout = "_Layout";
    ViewData["Title"] = "Командировки";
}
<caption>Тестовая таблица</caption> 
    <table class="table table-striped">
            @foreach (var e in Model)
            {
                <tr>
                    <td align="left">@e.Manager</td>
                    <td align="left">@e.Docs</td>
                    <td align="left">@e.LoadCrm</td>
                    <td align="left">@e.ReadySort</td>
                    <td align="left">@e.Specialist</td>
                    <td align="left">@e.DateTrip.ToShortDateString()</td>
            @if (User.IsInRole("Administrator"))
            {
                <td align="left"><button>Назначить командировку</button></td>
            }
        </tr>
            }
    </table>

